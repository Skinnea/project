<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    tools:context=".ui.chat.ChatActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvlistChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@+id/adminProfile"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <include
        android:id="@+id/adminProfile"
        layout="@layout/admin_card_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:padding="8dp">

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@id/sendButton"
            android:autofillHints="@string/textchat"
            android:background="@drawable/edit_text_shadow"
            android:hint="@string/textchat"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/navi"
            android:textColorHint="@android:color/darker_gray" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/sendButton_description"
            android:clickable="false"
            app:borderWidth="0dp"
            app:elevation="5dp"
            app:fabCustomSize="35dp"
            app:maxImageSize="24dp"
            app:srcCompat="@drawable/baseline_send_24"
            app:tint="@color/blue_day" />
    </RelativeLayout>
</RelativeLayout>